{
  "name": "smart-tab-grouper",
  "version": "1.0.0",
  "description": "Intelligently group your browser tabs using ML-based clustering",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun run build.ts",
    "dev": "bun run build.ts && bun run watch",
    "watch": "bun run --watch build.ts",
    "clean": "rm -rf dist",
    "package": "bun run build && cd dist && zip -r ../smart-tab-grouper.zip .",
    "dev:chrome": "bun run build && open -a 'Google Chrome' --args --load-extension=$(pwd)/dist"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/chrome": "^0.1.32"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "keywords": [
    "chrome-extension",
    "tab-management",
    "productivity",
    "machine-learning",
    "clustering"
  ]
}
