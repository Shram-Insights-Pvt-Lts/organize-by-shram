{
  "name": "reflect-newtab",
  "version": "1.0.0",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/chrome": "^0.1.32"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "description": "A calm moment of reflection with every new tab",
  "keywords": [
    "chrome-extension",
    "new-tab",
    "reflection",
    "mindfulness",
    "productivity"
  ],
  "private": true,
  "scripts": {
    "build": "bun run build.ts",
    "dev": "bun run build.ts && bun run watch",
    "watch": "bun run --watch build.ts",
    "clean": "rm -rf dist",
    "package": "bun run build && cd dist && zip -r ../reflect-newtab.zip .",
    "dev:chrome": "bun run build && open -a 'Google Chrome' --args --load-extension=$(pwd)/dist"
  },
  "type": "module"
}
